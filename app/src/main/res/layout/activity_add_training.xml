<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddTrainingActivity">

    <ImageView
        android:id="@+id/trainingImageView"
        android:layout_width="157dp"
        android:layout_height="157dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="16dp"
        android:onClick="pickedPhoto"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <EditText
        android:id="@+id/trainingName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint="Nazwa szkolenia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trainingImageView" />

    <EditText
        android:id="@+id/trainingDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint="Opis"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@+id/trainingName"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/trainingAccept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:text="Zatwierdź"
        android:onClick="displayToastMsg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewAddPhoto"
        android:layout_width="149dp"
        android:layout_height="54dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:text="Kliknij, aby dodać zdjęcie"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/trainingImageView"
        app:layout_constraintEnd_toEndOf="@+id/trainingImageView"
        app:layout_constraintStart_toStartOf="@+id/trainingImageView"
        app:layout_constraintTop_toTopOf="@+id/trainingImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>